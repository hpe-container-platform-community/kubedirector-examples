set -x
set -e
set -o pipefail

if [[ "$1" == "--configure" ]]; then
  echo "Running startscript with --configure option"
else
  echo "ERROR: Unknown command line option(s): '$@'"
  exit 10
fi

echo '<html><head><title>HTTP Hello World</title></head><body><h1>Hello from '$(hostname)'</h1></body></html' > /www/index.html

python -m SimpleHTTPServer 80
